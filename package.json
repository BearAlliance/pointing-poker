{
  "name": "pointing-poker",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.5",
    "debug": "^4.1.1",
    "express": "^4.17.1",
    "express-ws": "^4.0.0",
    "http-errors": "^1.7.3",
    "lodash.isequal": "^4.5.0",
    "morgan": "^1.9.1",
    "websocket": "^1.0.31"
  },
  "scripts": {
    "start": "node build-server/bin/www.js",
    "start:dev": "concurrently -k -n 'server,client' 'npm run start:dev:server' 'npm run start:dev:client'",
    "start:dev:server": "nodemon --exec babel-node server/bin/www.js --watch server",
    "start:dev:client": "react-scripts start",
    "prebuild": "rimraf build && rimraf build-server",
    "build": "npm run build:client && npm run build:server",
    "build:server": "babel server --out-dir build-server",
    "build:client": "react-scripts build",
    "test": "npm run prettier:check && npm run lint && react-scripts test",
    "unit": "react-scripts test --watchAll",
    "lint": "eslint --ext .js --ext .jsx src server",
    "eject": "react-scripts eject",
    "prettier": "prettier --ignore-path .gitignore \"**/*.{js,jsx,md}\"",
    "prettier:check": "npm run prettier -- --check",
    "prettier:fix": "npm run prettier -- --write",
    "cypress:open": "cypress open"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "proxy": "http://localhost:4000",
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/node": "^7.8.7",
    "@babel/preset-env": "^7.9.0",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^7.2.1",
    "@types/express": "^4.17.3",
    "@types/morgan": "^1.9.0",
    "@types/react": "^16.9.23",
    "bulma": "^0.8.0",
    "classnames": "^2.2.6",
    "concurrently": "^5.1.0",
    "cypress": "^4.3.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-react": "^7.19.0",
    "formik": "^2.1.4",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.8",
    "lodash.random": "^3.2.0",
    "node-sass": "^4.13.1",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.4.0",
    "yup": "^0.28.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*{js,jsx}": "eslint --fix",
    "*{js,jsx,json,md}": "prettier --write"
  }
}
